{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "dynamodb:GetItem"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:dynamodb:<REGION>:<AWS_ACCOUNT_ID>:table/<DDB_DRIPS_TABLE>",
                "arn:aws:dynamodb:<REGION>:<AWS_ACCOUNT_ID>:table/<DDB_USERS_TABLE>",
                "arn:aws:dynamodb:<REGION>:<AWS_ACCOUNT_ID>:table/<DDB_VOTES_TABLE>"
            ]
        },
        {
            "Sid": "",
            "Resource": "*",
            "Action": [
                "logs:*"
            ],
            "Effect": "Allow"
        }
    ]
}
